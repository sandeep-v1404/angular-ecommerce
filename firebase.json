{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "dist/Project",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 9100
    },
    "firestore": {
      "port": 9101
    },
    "hosting": {
      "port": 9102
    },
    "pubsub": {
      "port": 9103
    },
    "ui": {
      "enabled": true,
      "port": 9104
    }
  }
}
